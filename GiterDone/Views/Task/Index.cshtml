@model object
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <title>Git'er Done</title>
            <script type="text/javascript" src="../../Content/../Scripts/jquery-1.5.1.js"></script>
            <script type="text/javascript" src="../../Content/../Scripts/jQuery.tmpl.js"></script>
            <script type="text/javascript" src="../../Content/../Scripts/knockout-1.2.1.js"></script>
            <script type="text/javascript" src="../../Content/../Scripts/MyScripts/Tasks.js"></script>
    </head>
    <body>
        <h1>Git'er Done</h1>
        <div>
              Task <input type="text" data-bind="value: newTaskText"/>
              <button id="AddTask" data-bind="click: addTask">Add</button>
              <ul data-bind="template: { name: 'taskTemplate', foreach: tasks }"></ul>
        </div>
    </body>
    <script type="text/x-jquery-tmpl" id="taskTemplate">
        <li>
            <p data-bind="text: name"/>    
        </li>
    </script>
</html>